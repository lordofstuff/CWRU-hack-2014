<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appsofawesome.soundcontrol"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:value="true" android:name="xposedmodule"/>
        <meta-data android:value="30+" android:name="xposedminversion"/>
        <meta-data android:value="Adjusts volume before the phone rings based on  ambient noise and movement." android:name="xposeddescription"/>
        <activity android:name="com.appsofawesome.soundcontrol.TestActivity" >
        </activity>
        <activity
            android:name="com.appsofawesome.soundcontrol.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.appsofawesome.soundcontrol.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>